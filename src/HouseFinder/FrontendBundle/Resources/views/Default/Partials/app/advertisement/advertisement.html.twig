{% verbatim %}
<script type="text/ng-template" id="app/advertisement/advertisement.html">
    <app-header></app-header>
    <div ng-show="loaded" class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <app-carouselPhotos photo="{{ advertisement.photo }}" photos="{{ advertisement.photos }}" smallWidth="100"></app-carouselPhotos>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row">
            <div>{{ advertisement.name }}</div>
            <div>{{ advertisement.description }}</div>
        </div>
        <div ng-hide="loaded">
            <ng-include src="'app/loading.html'"></ng-include>
        </div>
        <app-footer></app-footer>
    </div>
</script>
{% endverbatim %}
