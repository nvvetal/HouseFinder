{% verbatim %}
<script type="text/ng-template" id="searchMain.html">
    <div>
        <div class="row">
            <div class="col-xs-2"></div>
            <div class="col-xs-8">
                <form id="mainSearch" class="form form-main-search" role="form" ng-submit="search()">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="input-group">
                            <span class="input-group-addon input-sm">
                                Price, {{ currencyShort }}
                                <input type="text" name="price_from" class="form-control input-sm" placeholder="From">
                            </span>
                            <span class="input-group-addon input-sm">
                                <input type="text" name="price_to" class="form-control input-sm" placeholder="To">
                            </span>
                            </div>
                            <div class="input-group">
                            <span class="input-group-addon input-sm">
                                Rooms count
                                <input type="text" name="rooms_from" class="form-control input-sm" placeholder="From">
                            </span>
                            <span class="input-group-addon input-sm">
                                <input type="text" name="rooms_to" class="form-control input-sm" placeholder="To">
                            </span>
                            </div>
                            <div class="input-group">
                            <span class="input-group-addon input-sm">Space
                                <input type="text" name="space_from" class="form-control input-sm" placeholder="From">
                            </span>
                            <span class="input-group-addon input-sm">
                                <input type="text" name="space_to" class="form-control input-sm" placeholder="To">
                            </span>
                            </div>
                            <div class="input-group">
                            <span class="input-group-addon input-sm">Living Space
                                <input type="text" name="space_living_from" class="form-control input-sm" placeholder="From">
                            </span>
                            <span class="input-group-addon input-sm">
                                <input type="text" name="space_living_to" class="form-control input-sm" placeholder="To">
                            </span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="input-group">
                            <span class="input-group-addon input-sm">
                                Type
                                <select name="type" class="form-control input-sm">
                                    <option value="{{ type.value }}" ng-repeat="type in types">{{ type.name }}</option>
                                </select>
                            </span>
                            </div>
                            <div class="input-group">
                            <span class="input-group-addon input-sm">Level
                                <input type="text" name="level_from" class="form-control input-sm" placeholder="From">
                            </span>
                            <span class="input-group-addon input-sm">
                                <input type="text" name="level_to" class="form-control input-sm" placeholder="To">
                            </span>
                            </div>
                            <div class="input-group">
                            <span class="input-group-addon input-sm">House Level
                                <input type="text" name="house_level_from" class="form-control input-sm" placeholder="From">
                            </span>
                            <span class="input-group-addon input-sm">
                                <input type="text" name="house_level_to" class="form-control input-sm" placeholder="To">
                            </span>
                            </div>
                            <div class="input-group">
                                <button type="submit" class="btn btn-danger" >Search</button>
                                <button type="button" class="btn btn-info">More</button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="page" value="{{ advertisementCurrentPage }}" />
                </form>
            </div>
            <div class="col-xs-2"></div>
        </div>
        <div class="row">
            <table class="table table-striped table-bordered" ng-if="advertisementsAvailable">
                <tr ng-repeat="advertisement in advertisements.items">
                    <td>
                        {{ advertisement.lastDate }}
                    </td>
                    <td>
                        <img src="{{ advertisement.photo }}" alt="" />
                    </td>

                    <td>
                        <div>{{ advertisement.name }}</div>
                        <div>{{ advertisement.address }}</div>
                    </td>
                    <td>{{ advertisement.price }} {{ advertisement.currency }}</td>
                </tr>
            </table>
            <ul class="pagination" ng-if="advertisementsAvailable" id="advertisement-pager">
                <li ng-repeat="page in []|range:advertisements.pages" ng-click="advertisementPage(page)"><a href="#">{{ page + 1 }}</a></li>
            </ul>
        </div>
    </div>
</script>
{% endverbatim %}