{% verbatim %}
<script type="text/ng-template" id="searchMain.html">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <form class="form-inline" role="form">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon input-group-addon-sm">Price, {{ currencyShort }}</span>
                    <input type="text" name="price_from" class="form-control" placeholder="From">
                    <input type="text" name="price_to" class="form-control" placeholder="To">
                </div>
                <div class="input-group input-group-sm">
                    <span class="input-group-addon input-group-addon-sm">Rooms count</span>
                    <input type="text" name="rooms_from" class="form-control" placeholder="From">
                    <input type="text" name="rooms_to" class="form-control" placeholder="To">
                </div>
                <div class="input-group input-group-sm">
                    <span class="input-group-addon input-group-addon-sm">Space</span>
                    <input type="text" name="space_from" class="form-control input-sm" placeholder="From">
                    <input type="text" name="space_to" class="form-control input-sm" placeholder="To">
                </div>
                <div class="input-group input-group-sm">
                    <span class="input-group-addon input-group-addon-sm">Living Space</span>
                    <input type="text" name="space_living_from" class="form-control input-sm" placeholder="From">
                    <input type="text" name="space_living_to" class="form-control input-sm" placeholder="To">
                </div>
                <div class="input-group input-group-sm">
                    <span class="input-group-addon input-group-addon-sm">Type</span>
                    <select name="type" class="form-control input-sm">
                        <option value="{{ type.value }}" ng-repeat="type in types">{{ type.name }}</option>
                    </select>
                </div>

                <div class="input-group input-group-sm">
                    <span class="input-group-addon input-group-addon-sm">Level</span>
                    <input type="text" name="level_from" class="form-control input-sm" placeholder="From">
                    <input type="text" name="level_to" class="form-control input-sm" placeholder="To">
                </div>
                <div class="input-group input-group-sm">
                    <span class="input-group-addon input-group-addon-sm">House Level</span>
                    <input type="text" name="house_level_from" class="form-control input-sm" placeholder="From">
                    <input type="text" name="house_level_to" class="form-control input-sm" placeholder="To">
                </div>

            </form>
        </div>
        <div class="col-xs-2"></div>
    </div>
</script>
{% endverbatim %}